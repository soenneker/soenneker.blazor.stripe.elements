<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <Nullable>enable</Nullable>
        <Platforms>AnyCPU</Platforms>
        <NoWarn>$(NoWarn);1591</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <Description>A modular, strongly-typed Blazor library for Stripe Elements</Description>
        <Version Condition="'$(BUILD_VERSION)' == ''">4.0.0</Version>
        <Version Condition="'$(BUILD_VERSION)' != ''">$(BUILD_VERSION)</Version>
        <AssemblyName>Soenneker.Blazor.Stripe.Elements</AssemblyName>
        <PackageId>Soenneker.Blazor.Stripe.Elements</PackageId>
        <PackageTags>blazor stripe elements wasm js javascript payment processing webassembly blazorstripeelementsinteroputil blazorlibrary csharp dotnet c# .net</PackageTags>
        <Copyright>Copyright © 2025 Jake Soenneker</Copyright>
        <Authors>Jake Soenneker</Authors>
        <Company>https://soenneker.com</Company>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <IsPackable>true</IsPackable>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/soenneker/soenneker.blazor.stripe.elements</PackageProjectUrl>
        <RepositoryUrl>https://github.com/soenneker/soenneker.blazor.stripe.elements</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <RepositoryBranch>main</RepositoryBranch>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <LangVersion>latest</LangVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageIcon>icon.png</PackageIcon>
        <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    </PropertyGroup>


    <ItemGroup>
        
        <None Include="..\README.md" Pack="true" PackagePath="\" />
        <None Include="..\LICENSE" Pack="true" PackagePath="\" />
        <None Include="..\icon.png" Pack="true" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Soenneker.Blazor.Extensions.EventCallback" Version="3.0.425" />
        <PackageReference Include="Soenneker.Blazor.Utils.InteropEventListener" Version="3.0.3731" />
        <PackageReference Include="Soenneker.Blazor.Utils.ResourceLoader" Version="3.0.1508" />
        <PackageReference Include="Soenneker.Dtos.Stripe.Error" Version="3.0.80" />
        <PackageReference Include="Soenneker.Enums.CurrencyCodes" Version="3.0.14" />
        <PackageReference Include="Soenneker.Extensions.CancellationTokens" Version="3.0.3" />
        <PackageReference Include="Soenneker.Quark.Components.Core.Cancellable" Version="3.0.8" />
    </ItemGroup>
</Project>